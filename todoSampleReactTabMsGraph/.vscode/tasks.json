{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Stop All Services",
            "type": "shell",
            "command": "echo ${input:terminate}"
        },
        {
            "label": "Pre Debug Check",
            "dependsOn": [
                "dependency check",
                "prepare dev env"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "dependency check",
            "type": "shell",
            "command": "echo ${command:mods-toolkit-extension.validate-dependencies}"
        },
        {
            "label": "Start Frontend",
            "dependsOn": [
                "mods: frontend start",
                "mods: auth start"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "prepare dev env",
            "dependsOn": [
                "prepare local environment",
                "frontend npm install"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "prepare local environment",
            "type": "shell",
            "command": "echo ${command:mods-toolkit-extension.pre-debug-check}"
        },
        {
            "label": "frontend npm install",
            "type": "shell",
            "command": "npm install",
            "options": {
                "cwd": "${workspaceFolder}/tabs"
            }
        }
    ],
    "inputs": [
        {
            "id": "terminate",
            "type": "command",
            "command": "workbench.action.tasks.terminate",
            "args": "terminateAll"
        }
    ]
}
